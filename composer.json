{
    "name": "userh-dev/rocketchat-monolog-handler",
    "description": "A Rocket.chat Monolog Handler meant to be used in Laravel projects originally developed by Sysvale Softgroup, currently maintained by UseRH.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Esron Dtamar",
            "email": "esron.dtamar@gmail.com"
        },
        {
            "name": "USE SISTEMAS E APLICATIVOS LTDA",
            "email": "desenvolvimento@userh.com.br"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "monolog/monolog": "^2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "UseRH\\Logging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
